{
  "files": [],
  "references": [
    { "path": "./apps/shared" },
    // { "path": "./apps/web" },
    { "path": "./apps/api" }
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["apps/shared/*"],
      "@web/*": ["apps/web/src/*"],
      "@api/*": ["apps/api/src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true
  }
}
